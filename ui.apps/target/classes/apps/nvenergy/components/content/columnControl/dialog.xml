<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Column Control Component"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <colctrl
                jcr:primaryType="cq:Widget"
                title="Column Control"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <type
                        jcr:primaryType="cq:Widget"
                        defaultValue=""
                        fieldDescription="Select the column layout. "
                        fieldLabel="Column Layout"
                        name="./colType"
                        type="select"
                        xtype="selection">
                        <one-100
                            jcr:primaryType="nt:unstructured"
                            text="1 Column (100%) - HCP"
                            value="one-100"/>
                        <two-34-66
                            jcr:primaryType="nt:unstructured"
                            text="2 Columns (34%, 66%) - HCP"
                            value="two-34-66"/>
                        <two-66-34
                            jcr:primaryType="nt:unstructured"
                            text="2 Columns (66%, 34%) - HCP"
                            value="two-66-34"/>
                        <two-50-50
                            jcr:primaryType="nt:unstructured"
                            text="2 Columns (50%, 50%) - HCP"
                            value="two-50-50"/>
                        <three
                            jcr:primaryType="nt:unstructured"
                            text="3 Columns (33%, 33%, 33%) - HCP"
                            value="three-hcp"/>
                        <four-25each
                            jcr:primaryType="nt:unstructured"
                            text="4 Columns (25%, 25%, 25%, 25%)"
                            value="four-25each"/>
                    </type>
                </items>
            </colctrl>
        </items>
    </items>
</jcr:root>
